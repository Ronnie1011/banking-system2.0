    <div class="card">
        <h5 class="card-header">MONEY TRANSFER PORTAL</h5>
        <div class="card-body">
            <h5 class="card-title">Get your money transferred to any account at the click of a button</h5>
            <li>All you have to do is fill up the account details of the recipient </li>
            of the fund transfer and voila ,cashless transfer at your fingertips. <br>
            <br>
            <br>
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                TRANSFER
            </button>
            <br>
            <br>
            <br>
            <div style="background-color: aquamarine; text-align: center; border-radius: 15px;overflow-y: scroll;
         box-shadow: 0px 2px 4px 0px gray,0 4px 16px 0 grey;">
                <table class="custtable">
                    <thead>
                        <th>S.No</th>
                        <th>Name</th>
                        <th>Account No.</th>
                        <th>Balance</th>
                        <th>Payment Method</th>
                        <th></th>
                    </thead>
                    <tbody>
                <% for(let i=0;i<money_transfer.length;i++){ %>
                    <tr>
                        <td><p style="color: rgb(10, 10, 10);"><%=(i+1)%></p></td>
                        <td><p style="color: rgb(22, 21, 21);"><%=money_transfer[i].Name%></p></td>
                        <td><p style="color: rgb(5, 5, 5);"><%=money_transfer[i].Account_No%></p></td>
                        <td><p style="color: rgb(7, 6, 6);"><%=money_transfer[i].Transfer_Amount%></p></td>
                        <td><p style="color: rgb(7, 6, 6);"><%=money_transfer[i].Payment_Method%></p></td>
                    </tr>
                <% } %>
            </tbody>
            </table>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Recipient account details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <div class="col-md-7 col-lg-8">

                        <form action="money-transfer" method="POST" class="needs-validation" novalidate>
                            <div class="row g-3">
                                <div class="col-sm-6">
                                    <label for="firstName" class="form-label">Name</label>
                                    <input type="text" class="form-control" id="Name" name="Name" placeholder="" value=""
                                        required>
                                    <div class="invalid-feedback">
                                        Valid first name is required.
                                    </div>
                                </div>


                                <div class="mb-3">
                                    <label for="exampleInputNumber" class="form-label">Enter Account No. </label>
                                    <input type="text" class="form-control" name="Account_No" aria-label="Account no">

                                    <div class="mb-3">
                                        <label for="exampleInputPas" class="form-label">Enter Amount</label>
                                        <input type="text" class="form-control" name="Transfer_Amount" aria-label="amount">
                                    </div>
                                    <div class="mb-3 form-check">
                                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                        <label class="form-check-label" for="exampleCheck1">I,agree to pay the
                                            amount</label>
                                    </div>
                                    <div class="dropdown">
                                        <label for="">Payment Method :</label>
                                        <select name="Payment_Method" id="">
                                            <option value="RTGS">RTGS</option>
                                            <option value="NEFT">NEFT</option>
                                        </select>
                                        <div class="col-md-3">
                                            <label for="zip" class="form-label">Zip</label>
                                            <input type="text" class="form-control" id="zip" placeholder="" required>
                                            <div class="invalid-feedback">
                                                Zip code required.
                                            </div>
                                        </div>
                                    </div>

                                    <hr class="my-4">


                                    <hr class="my-4">

                                    <h4 class="mb-3">Payment</h4>

                                    <div class="my-3">
                                        <div class="form-check">
                                            <input id="credit" name="paymentMethod" type="radio"
                                                class="form-check-input" checked required>
                                            <label class="form-check-label" for="credit">Credit card</label>
                                        </div>
                                        <div class="form-check">
                                            <input id="debit" name="paymentMethod" type="radio" class="form-check-input"
                                                required>
                                            <label class="form-check-label" for="debit">Debit card</label>
                                        </div>
                                        <div class="form-check">
                                            <input id="paypal" name="paymentMethod" type="radio"
                                                class="form-check-input" required>
                                            <label class="form-check-label" for="paypal">PayPal</label>
                                        </div>
                                    </div>

                                    <div class="row gy-3">




                                        <div class="col-md-3">
                                            <label for="cc-expiration" class="form-label">Expiration</label>
                                            <input type="text" class="form-control" id="cc-expiration" placeholder=""
                                                required>
                                            <div class="invalid-feedback">
                                                Expiration date required
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <label for="cc-cvv" class="form-label">CVV</label>
                                            <input type="text" class="form-control" id="cc-cvv" placeholder="" required>
                                            <div class="invalid-feedback">
                                                Security code required
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Close</button>
                                    <button class="w-30 btn btn-primary " type="submit">Transfer</button>
                                </div>
                            </div>
                    </div>
                </div>

            </div>
